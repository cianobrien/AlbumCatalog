<head>
<link rel = "stylesheet" type = "text/css" href = "~/assets/menu.css.scss"
</head>

<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>

<% @albums.each do |album| %>
	<span class = "cover">
    	<%= link_to image_tag(album.image_url, size: "150x150", class: 'list_image'), album %>
	<span class="imgDescription"><%= album.artist %>:<br><%= album.name %></span>
	<span class="imglink"><%= link_to 'Add to Profile', line_items_path(album_id: album), :method => :post %> </span>
	</span>
<% end %>
