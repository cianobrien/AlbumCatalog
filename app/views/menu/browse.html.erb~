<% @albums.each do |album| %>
	<span class = "cover">
    	<%= link_to image_tag(album.image_url, size: "150x150", class: 'list_image'), album %>
	<span class="imgDescription"><%= album.artist %>:<br><%= album.name %></span>
	  <span class="imglink">
          <% if album.entered?(@profile) %>
            <%= link_to 'Remove from Profile', album.find_line_item, :method => :delete %> 
          <% else %>
            <%= link_to 'Add to Profile', line_items_path(album_id: album), :method => :post %> 
          <% end %>
          </span>
	</span>
<% end %>
