  <span class = "cover">
    <% if profile.profile_picture_url == nil  %>
      <%= link_to image_tag("https://upload.wikimedia.org/wikipedia/commons/0/0e/Lakeyboy_Silhouette.PNG", size: "100x150", class: 'list_image'), profile %>
    <% else %>
      <%= link_to image_tag(profile.profile_picture_url, size: "100x150", class: 'list_image'), profile %>
    <% end %>

    <span class="imgDescription">
      <% if profile.name == nil  %>
        New User
      <% else %>
        <%= profile.name %>
      <% end %>
    </span>

    <% if session[:user_id] == 1 %>
      <span class="imglink"><%= link_to 'Delete', profile, method: :delete %></span>
    <% end %>
          
  </span>
<% end %>



