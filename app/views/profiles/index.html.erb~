    <% end %>

    <span class="imgDescription2">
      <% if profile.name == nil  %>
        New User
      <% else %>
        <%= profile.name %>
      <% end %>
    </span>

    <% if session[:user_id] == 1 %>
      <span class="imglink2"><%= link_to 'Delete', profile, method: :delete %></span>
    <% end %>
          
  </span>
<% end %>

