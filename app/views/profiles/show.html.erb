    <% end %>

    <span class="imgDescription2">
      <% if @current_prof.name == nil  %>
        New User
      <% else %>
        <%= @current_prof.name %>
      <% end %>
    </span>          
  </span>
<% end %>
<% end %>

<% if session[:user_id] %>
<% if @profile == User.find(session[:user_id]).profile %>
  <center><h2>Your Reviews:</h2></center>
<% else %>
