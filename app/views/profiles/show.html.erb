<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>

<p>
  <h1><%= @profile.name %></h1>
</p>

<% if @profile.name == Profile.find(session[:profile_id]).name %>
  <p class = links>
    <%= link_to 'Edit Profile', edit_profile_path(@profile) %>
  </p>
<% end %>

<table>

  <td>
    <%= image_tag(@profile.profile_picture_url, size: "150x200", class: 'list_image') %>
  </td>

<td class='bio'>
	  <dl>
	    <pre>
	      <h2>Bio:</h2>
	      <%= @profile.bio %>
	    </pre>
	  </dl>
	</td>
</table>


<br>
<br>

<center><h2><%= @profile.name %>'s Album List:</h2></center>

<br>
<br>
<br>
<br>
   
<% @profile.line_items.order(:rating).reverse.each do |item| %>
	<span class = "cover"><%= link_to image_tag(item.album.image_url, size: "150x150", class: 'list_image'), item %>
		<span class="imgDescription">
			<% if item.rating > 0 %>
				<%= item.album.artist %>:<br><%= item.album.name %> (<%= item.rating.round(1) %>)
			<% else %>
				<%= item.album.artist %>:<br><%= item.album.name %>
			<% end %>
		</span>
		<span class="imglink"><%= link_to 'Remove from Profile', item, method: :delete %>
		</span>
	</span>

<% end %>



