<% if not session[:user_id] %>
<div class="depot_form">
  <% if flash[:alert] %>
    <p id="notice"><%= flash[:alert] %></p>
  <% end %>
  <%= form_tag do %>
    <fieldset>
      <h3>Please Log In</h3>
      <div class="field">
        <%= label_tag :name, 'Name:' %>
        <br>
        <%= text_field_tag :name, params[:name] %>
      </div>
      <div class="field">
        <%= label_tag :password, 'Password:' %>
        <br>
        <%= password_field_tag :password, params[:password] %>
      </div>
      <div>
        <br>
        <%= submit_tag "Login" %>
      </div>
    </fieldset>
  <% end %>
</div>
<% end %>
